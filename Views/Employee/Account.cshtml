@model Employee
<h2 class="mt-3"><i class="far fa-address-card"></i> Employee Account</h2>

<form method="post" asp-action="Account">
    <div asp-validation-summary="All" style="color:red;"></div>
    <input type="hidden" name="EmployeeId" value="@Model.EmployeeId" />
        <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.LastName">Last Name</label>
            <input asp-for="@Model.LastName" class="form-control" placeholder="LastName" />
        </div>
        </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.FirstName">First Name</label>
            <input asp-for="@Model.FirstName" class="form-control" placeholder="FirstName" />
        </div>
    </div>

        <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Title">Title</label>
            <input asp-for="@Model.Title" class="form-control" placeholder="Title" />
        </div>
    </div>

        <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.TitleOfCourtesy">Title of Courtesy (Mr./Mrs./Ms./Dr.)</label>
            <input asp-for="@Model.TitleOfCourtesy" class="form-control" placeholder="TitleOfCourtesy" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.BirthDate">Birth Date</label>
            <input asp-for="@Model.BirthDate" class="form-control" placeholder="BirthDate" type=date/>
        </div>
    </div>

        <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.HireDate">Hire Date</label>
            <input asp-for="@Model.HireDate" class="form-control" placeholder="HireDate" type=date />
        </div>
    </div>
    
    
    
    
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Address">Address</label>
            <input asp-for="@Model.Address" class="form-control" placeholder="Address" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.City">City</label>
            <input asp-for="@Model.City" class="form-control" placeholder="City" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Region">Region</label>
            <input asp-for="@Model.Region" class="form-control" placeholder="Region" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.PostalCode">Postal Code</label>
            <input asp-for="@Model.PostalCode" class="form-control" placeholder="Postal Code" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Country">Country</label>
            <input asp-for="@Model.Country" class="form-control" placeholder="Country" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.HomePhone">Home Phone</label>
            <input asp-for="@Model.HomePhone" class="form-control" placeholder="HomePhone" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Extension">Extension</label>
            <input asp-for="@Model.Extension" class="form-control" placeholder="Extension" />
        </div>
    </div>

    <button type="submit" class="btn btn-outline-primary">Save</button>
</form>