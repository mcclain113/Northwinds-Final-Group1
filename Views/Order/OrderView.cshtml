 <h2 class="mt-3"><i class="fas fa-list-ul"></i> Orders</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">
          <div class="form-row">
          <div class="form-group col-md-4 mb-0">
            <div class="form-check text-left">
              <input class="form-check-input" type="checkbox" id="LateOrders">
              <label class="form-check-label" for="LateOrders">View Late Orders</label>
            </div>
          </div>
           <div class="form-group col-md-4 mb-0">
            <div class="form-check text-left">
              <input class="form-check-input" type="checkbox" id="NextFutureOrders">
              <label class="form-check-label" for="NextFutureOrders">View Future Orders Due (Next 7 Days)</label>
            </div>
          </div>
          <div class="form-group col-md-4 mb-0">
            <div class="form-check text-left">
              <input class="form-check-input" type="checkbox" id="AllFutureOrders">
              <label class="form-check-label" for="AllFutureOrders">View Future Orders Due (All)</label>
            </div>
          </div>
      </div>
      </th>
    </tr>
</thead>
</table>


<ul id="orders" class="list-group">

@section Scripts
{
  <script src="../../js/order.js">
  </script>
}

</ul>